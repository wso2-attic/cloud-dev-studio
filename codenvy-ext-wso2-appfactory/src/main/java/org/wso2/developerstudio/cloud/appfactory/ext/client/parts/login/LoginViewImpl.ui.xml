<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
    
      .labelMargin {
            position: relative;
            line-height: 25px;
            margin-left: 18px;

        }
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
       
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="400px" height="300px" addStyleNames="{style.emptyBorder}">
        
        <g:north size="50.0">
            <g:DockLayoutPanel unit="PX" addStyleNames="{style.spacing}">
                <g:west size="140">
                    <g:FlowPanel>
                        <g:Label text="Connect to:" addStyleNames="{style.labelMargin}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.space}">
                        <g:SimplePanel>
                           <g:RadioButton ui:field="appCloud" name="type" text="App Cloud"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
                <g:east size="140">
                <g:SimplePanel addStyleNames="{style.space}">
                     <g:SimplePanel>
                          <g:RadioButton ui:field="appFac" name="type" text="App Factory"/>
                      </g:SimplePanel>
                </g:SimplePanel>
                </g:east>
                    
            </g:DockLayoutPanel>

        </g:north>
        <g:north size="50.0">
            <g:HTML ui:field="message"/>
        </g:north>
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="140">
                    <g:FlowPanel>
                        <g:Label text="WSO2 APP Cloud:" addStyleNames="{style.labelMargin}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.space}">
                        <g:SimplePanel>
                            <g:TextBox width="400px" height="22px" ui:field="wso2AppCloud"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
          <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="140">
                    <g:FlowPanel>
                        <g:Label text="Email:" addStyleNames="{style.labelMargin}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.space}">
                        <g:SimplePanel>
                            <g:TextBox width="400px" height="22px" ui:field="email"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>  <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="140">
                    <g:FlowPanel>
                        <g:Label text="Password:" addStyleNames="{style.labelMargin}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.space}">
                        <g:SimplePanel>
                            <g:PasswordTextBox width="400px" height="22px" ui:field="password"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
         <g:south size="26.0">

            <g:FlowPanel>
                <g:Button addStyleNames="{style.alignBtn}" text="OK" width="60px" ui:field="btnOK"/>

                <g:Button addStyleNames="{style.alignBtn} {style.space}" text="Cancel" width="60px"
                          ui:field="btnCancel"/>
            </g:FlowPanel>

        </g:south>
    </g:DockLayoutPanel>


</ui:UiBinder>